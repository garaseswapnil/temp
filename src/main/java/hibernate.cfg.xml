<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
    
    	<property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
	  <property name = "hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
      <property name = "hibernate.connection.url">jdbc:mysql://localhost:3306/swap</property>
      <property name = "hibernate.connection.username">root</property>
      <property name = "hibernate.connection.password">root123</property>
      
            <property name="show_sql">true</property>  <!-- whatever query hibernate generates will be printed on console -->
      <property name="hibernate.hbm2ddl.auto">create</property>  <!--  database table creation by hibernate -->
      <property name="format_sql">true</property><!--  formatted 	queries will be printed on console -->
      
      <!-- <mapping class="com.maven.java.AnnotationCrud.Customer"></mapping> -->
      <mapping class="Entity.Student"></mapping>
      </session-factory>
      </hibernate-configuration>